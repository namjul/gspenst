{
  "name": "@gspenst/root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "playground/*"
  ],
  "scripts": {
    "build": "preconstruct build",
    "checkall": "yarn test && yarn lint && yarn lint:types && yarn lint:format",
    "clean": "rimraf packages/*/dist",
    "lint": "eslint --cache --ignore-path .gitignore --max-warnings 0 . --ext .ts,.tsx",
    "prepare": "git config --local core.hooksPath .githooks || echo 'not in git' && preconstruct dev",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "test": "jest",
    "lint:format": "prettier --ignore-path .gitignore  . -l",
    "lint:types": "yarn workspaces run lint:types",
    "version": "changeset version",
    "watch": "preconstruct watch"
  },
  "prettier": {
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "kentcdodds",
      "kentcdodds/react",
      "kentcdodds/jest",
      "kentcdodds/jsx-a11y"
    ],
    "rules": {
      "@typescript-eslint/unbound-method": [
        "error",
        {
          "ignoreStatic": true
        }
      ],
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts?(x)"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "project": [
            "./tsconfig.json",
            "./packages/*/tsconfig.json"
          ]
        },
        "plugins": [
          "@typescript-eslint"
        ]
      },
      {
        "files": [
          "packages/**/*.ts?(x)",
          "typings/**/*.ts?(x)"
        ],
        "rules": {
          "@typescript-eslint/no-explicit-any": "off",
          "@typescript-eslint/no-non-null-assertion": "off"
        }
      }
    ],
    "root": true
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(fnv1a|dot-prop|sort-on|filter-obj)/)"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "resolutions": {
    "**/@types/react": "^17.0.38",
    "**/@types/react-dom": "^17.0.11"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/cli": "^2.24.3",
    "@preconstruct/cli": "^2.4.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "eslint": "^8.17.0",
    "eslint-config-kentcdodds": "^20.2.0",
    "jest": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": ">=12",
    "prettier": "^2.6.2",
    "prettier-plugin-packagejson": "^2.2.17",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "typescript": "4.7.3"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
