{
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "lint": "eslint .",
    "typecheck": "yarn workspaces run typecheck",
    "prepare": "husky install",
    "pretest": "tsc --noEmit"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,md,json,mdx}": "prettier --write",
    "*.{ts,tsx}": [
      "eslint --cache --fix",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "prettier": {
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "kentcdodds",
      "kentcdodds/react",
      "kentcdodds/jest",
      "kentcdodds/jsx-a11y"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "eslint": "^7.31.0",
    "eslint-config-kentcdodds": "^19.1.1",
    "husky": "^7.0.0",
    "lint-staged": ">=10",
    "prettier": "^2.3.2",
    "prettier-plugin-packagejson": "^2.2.11",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">=10"
  }
}
