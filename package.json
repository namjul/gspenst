{
  "name": "@gspenst/root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "preconstruct build",
    "checkall": "yarn test && yarn lint && yarn lint:types && yarn format",
    "clean": "rimraf packages/*/dist",
    "format": "prettier --ignore-path .gitignore  . '!**/*-lock.json' '!**/pageMap.json' '!**/*.(md|mdx)' -l",
    "lint": "yarn lint:types & yarn lint:eslint & yarn format",
    "lint:eslint": "eslint_d --cache --ignore-path .gitignore --report-unused-disable-directives --max-warnings 0 . --ext .ts,.tsx",
    "lint:types": "yarn workspaces run lint:types",
    "prepare": "git config --local core.hooksPath .githooks || echo 'not in git'",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "test": "jest && yarn workspace gspenst test",
    "test:watch": "jest --watch",
    "version": "changeset version",
    "watch": "preconstruct watch"
  },
  "prettier": {
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "kentcdodds",
      "kentcdodds/react",
      "kentcdodds/jest",
      "kentcdodds/jsx-a11y"
    ],
    "rules": {
      "@typescript-eslint/unbound-method": [
        "error",
        {
          "ignoreStatic": true
        }
      ],
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts?(x)"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "project": [
            "./tsconfig.json",
            "./packages/*/tsconfig.json"
          ]
        },
        "plugins": [
          "@typescript-eslint"
        ]
      },
      {
        "files": [
          "packages/**/*.ts?(x)",
          "typings/**/*.ts?(x)"
        ],
        "rules": {
          "@typescript-eslint/no-explicit-any": "off",
          "@typescript-eslint/no-non-null-assertion": "off"
        }
      }
    ],
    "root": true
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(fnv1a|dot-prop|sort-on|filter-obj)/)"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/cli": "^2.24.3",
    "@preconstruct/cli": "^2.4.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^27.4.1",
    "eslint": "^8.40.0",
    "eslint-config-kentcdodds": "^20.5.0",
    "jest": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": ">=12",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "prettier-plugin-packagejson": "^2.2.17",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.1",
    "typescript": "5.0.3"
  },
  "packageManager": "pnpm@7.3.0",
  "pnpm": {
    "overrides": {
      "@types/react": "^18.2.0",
      "@types/react-dom": "^18.2.0",
      "react": "^18.2.0",
      "react-dom": "^18.2.0"
    },
    "patchedDependencies": {
      "mingo@2.5.3": "patches/mingo@2.5.3.patch"
    }
  },
  "preconstruct": {
    "packages": [
      "packages/gspenst",
      "packages/@gspenst/next",
      "packages/@gspenst/nextra-theme-blog"
    ]
  }
}
