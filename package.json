{
  "name": "@gspenst/root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "preconstruct build",
    "clean": "rimraf packages/*/dist",
    "lint": "eslint_d . --ext .ts,.tsx",
    "prepare": "husky install && preconstruct dev",
    "test": "jest",
    "typecheck": "npm run typecheck --workspaces",
    "watch": "preconstruct watch"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "spike"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.{ts,tsx,md,json,mdx}": "prettier --write",
    "*.{ts,tsx}": [
      "eslint_d --cache",
      "jest --bail --findRelatedTests"
    ]
  },
  "prettier": {
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "kentcdodds",
      "kentcdodds/react",
      "kentcdodds/jest",
      "kentcdodds/jsx-a11y"
    ],
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts?(x)"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "project": [
            "./tsconfig.json",
            "./packages/*/tsconfig.json",
            "./starters/*/tsconfig.json"
          ]
        },
        "plugins": [
          "@typescript-eslint"
        ]
      },
      {
        "files": [
          "packages/**/*.ts?(x)",
          "typings/**/*.ts?(x)"
        ],
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ],
    "root": true
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(dot-prop)/)"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.8",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@preconstruct/cli": "^2.1.3",
    "@types/jest": "^27.0.1",
    "eslint-config-kentcdodds": "^19.1.1",
    "eslint_d": "^11.0.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": ">=10",
    "prettier": "^2.5.1",
    "prettier-plugin-packagejson": "^2.2.11",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.4",
    "typescript": "4.4.2"
  },
  "engines": {
    "node": ">=16.13.2",
    "npm": "^8.1.2"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
